<synth>
	<imageIcon id="icon_off" path="menu_gray.png" />
	<imageIcon id="icon_on"  path="menu.png" />

	<style id="button">
		<insets right="10" />
		<state>
			<property key="Button.icon" value="icon_off" />
		</state>
		<state value="MOUSE_OVER">
			<property key="Button.icon" value="icon_on" />
		</state>
	</style>

	<style id="toolbar">
		<imagePainter path="title.png" sourceInsets="5 10 2 10"
					  paintCenter="true" stretch="true"/>
		<insets top="5" bottom="2" left="10" right="10"/>
	</style>

	<style id="title">
	   <font name="Verdana" size="9"/>
	   <state>
	       <color value="#2d92bd" type="FOREGROUND"/>
	   </state>
	</style>

	<bind style="button" type="name" key="InstrumentMenuButton" />
	<bind style="toolbar" type="name" key="InstrumentToolbar" />
	<bind style="title" type="name" key="InstrumentTitle" />

</synth>
