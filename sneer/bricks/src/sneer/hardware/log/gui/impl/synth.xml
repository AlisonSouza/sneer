<synth>

	<defaultsProperty key="LodConsoleImpl.offsetX" type="Integer" value="20"/>
	<defaultsProperty key="LodConsoleImpl.offsetY" type="Integer" value="0"/>
	<defaultsProperty key="LodConsoleImpl.height" type="Integer" value="150"/>
	<defaultsProperty key="LodConsoleImpl.x" type="Integer" value="10"/>

	<style id="logTextAreaStyle">
		<opaque value="true" />
		<font name="Verdana" size="10" />
	    <state>
	      <color value="WHITE" type="BACKGROUND"/>
	      <color value="BLACK" type="FOREGROUND"/>
	      <insets top="5" left="5" bottom="5" right="5" />
	    </state>
	</style>
	<bind style="logTextAreaStyle" type="name" key="logTextArea" />


</synth>