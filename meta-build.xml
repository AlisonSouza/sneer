<?xml version="1.0"?>
<project name="sneer" default="test">
	
	<property name="build.dir" value="bin" />
	<property name="builder.project" value="antlips" />
	
	<target name="test" depends="test-execution, test-verification">
	</target>
	
	<target name="hudson" depends="clover-report, test-verification">
	</target>
	
	<target name="test-verification" if="junit.failures">
		<fail>Test failures! Check the output for details.</fail>
	</target>
		
	<target name="test-execution" depends="build">
		<junit printsummary="true" failureproperty="junit.failures" fork="yes">
			<classpath>
				<fileset dir=".">
					<include name="**/lib/**/*.jar" />
				</fileset>
				<pathelement location="${build.dir}" />
				
				<!-- resource files required by tests -->
				<pathelement location="${builder.project}/src" />
				<pathelement location="wheel/src" />
			</classpath>
			
			<batchtest todir="${build.dir}">
				<fileset dir="${build.dir}">
					<include name="**/tests/*Test.class" />
					<exclude name="**/spikes/src/**" />
				</fileset>
				<fileset dir="tests/src">
					<include name="**/*Test.java" />
				</fileset>
				<formatter type="plain"/>
			</batchtest>
		</junit>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>
	
	<target name="build" depends="clean, build.xml.generation">
		<ant antfile="generated-build.xml" />
	</target>
	
	<target name="clover-report">
		
		<taskdef resource="cloverlib.xml" classpath="${builder.project}/lib/clover.jar"/>
		<clover-setup initString="mycoverage.db"/>
		
		<fileset dir="${build.dir}" id="clover.sources">
			<include name="**/*.java" />
			<exclude name="spikes/**" />
		</fileset>
		
		<antcall target="test-execution" />
		
		<clover-report>
	       <current outfile="clover.xml">
	          <format type="xml"/>
	       	  <fileset refid="clover.sources" />
	       </current>
	    </clover-report>
		
		<clover-report>
	       <current outfile="clover">
	          <format type="html"/>
	       	  <fileset refid="clover.sources" />
	       </current>
	    </clover-report>
	</target>
	
	<target name="build.xml.generation" depends="init">
		
		
		<path id="wheel.lib.classpath">
			<fileset dir="wheel/lib">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="${builder.project}/lib">
				<include name="**/*.jar" />
			</fileset>
		</path>
		
		<javac destdir="${build.dir}"
			classpathref="wheel.lib.classpath"
			listfiles="true"
			failonerror="true"
			debug="on"
			encoding="utf-8"
			source="1.6"
         	target="1.6">
			<src path="wheel/src" />
			<src path="${builder.project}/src" />
		</javac>
		
		<java classname="build.GenerateAntFile">
			<classpath>
				<pathelement location="${build.dir}" />
				<path refid="wheel.lib.classpath" />
			</classpath>
			<arg value="-sourcefolderstogether" />
		</java>
	</target>
	
	<target name="init">
		<mkdir dir="${build.dir}" />
	</target>	
	
</project>